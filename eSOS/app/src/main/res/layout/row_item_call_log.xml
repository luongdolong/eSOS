<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgTypeCall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_online_support" />
    <TextView
        android:id="@+id/tvCallTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgTypeCall"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:textStyle="italic"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:text="20:08:20 Thứ 2, ngày 11/09/2017"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvCallName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgTypeCall"
        android:paddingLeft="30dp"
        android:layout_below="@+id/tvCallTime"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Long"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/tvCallTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgTypeCall"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvCallName"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="19001001"
        android:textColor="@android:color/black" />
    <RelativeLayout
        android:id="@+id/rlUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/imgTypeCall"
        android:layout_below="@+id/tvCallTel">
        <ImageView
            android:id="@+id/logoCallReceiver"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_ambulance"/>
        <TextView
            android:id="@+id/tvCallUnitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/logoCallReceiver"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Lực lượng cấp cứu 115"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlUnit"
        android:background="#d3d3d3"/>
</RelativeLayout>