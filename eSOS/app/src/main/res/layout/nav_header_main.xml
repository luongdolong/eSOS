<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageHeaderAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/sym_def_app_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingLeft="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/tvHeaderUnitname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Trung tâm điều hành bệnh viện 198"/>
        <TextView
            android:id="@+id/tvHeaderFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#fff"
            android:textSize="6pt"
            android:gravity="left"
            android:ellipsize="end"
            android:singleLine="true"
            android:lines="1"
            android:text="Luong Do Long"/>
        <TextView
            android:id="@+id/tvHeaderTelNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#fff"
            android:textSize="6pt"
            android:gravity="left"
            android:ellipsize="end"
            android:singleLine="true"
            android:lines="1"
            android:text="0902088968"/>
    </LinearLayout>

