<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/avatarContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_online_support" />

    <TextView
        android:id="@+id/menuNameContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="30dp"
        android:layout_toRightOf="@id/avatarContact"
        android:text="Marshmallow"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/menuTelContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatarContact"
        android:paddingLeft="30dp"
        android:layout_below="@+id/menuNameContact"
        android:layout_marginTop="5dp"
        android:text="19001001"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/menuUnitname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatarContact"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/menuTelContact"
        android:textAlignment="textEnd"
        android:textStyle="italic"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="19001001"
        android:textColor="@android:color/black" />
</RelativeLayout>